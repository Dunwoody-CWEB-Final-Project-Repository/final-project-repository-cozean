@model FNLPRJ.CleanProject.Models.Episode

<link href="~/Content/Validation.css" rel="stylesheet" />

@using (Html.BeginForm("EditUpdate", "Home", FormMethod.Post))
{
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.episodeNumber)

        <div class="form-group" style="text-align: center;">
            <h4 style="text-align:center;"><strong>Sound File:</strong></h4>
            <div>
                @Html.EditorFor(model => model.soundFileLocation, new { htmlAttributes = new { @class = "form-control", style = "margin:auto;" } })
                @Html.ValidationMessageFor(model => model.soundFileLocation, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="text-align: center;">
            <h4 style="text-align:center;"><strong>Description</strong></h4>
            <div>
                @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control", style = "margin:auto;" } })
                @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="text-align: center;">
            <h4 style="text-align:center;"><strong>Picture File:</strong></h4>
            <div>
                @Html.EditorFor(model => model.picFileLocation, new { htmlAttributes = new { @class = "form-control", style = "margin:auto;" } })
                @Html.ValidationMessageFor(model => model.picFileLocation, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />

        <div class="form-group">
            <div style="text-align:center;">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div style="text-align:center;">
    <button>@Html.ActionLink("Back to Admin", "AdminSection")</button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
