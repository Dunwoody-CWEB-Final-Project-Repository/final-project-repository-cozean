@model FNLPRJ.CleanProject.Models.Subscriber


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 style="text-align:center;">Subscriber</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.subID)

    <div class="form-group" style="text-align: center;">
        <h4 style="text-align:center;"><strong>Preferred Name:</strong></h4>
        <div>
            @Html.EditorFor(model => model.prefName, new { htmlAttributes = new { @class = "form-control", style = "margin:auto;" } })
            @Html.ValidationMessageFor(model => model.prefName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="text-align: center;">
        <h4 style="text-align:center;"><strong>Email:</strong></h4>
        <div>
            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", style = "margin:auto;" } })
            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <div style="text-align:center;">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
