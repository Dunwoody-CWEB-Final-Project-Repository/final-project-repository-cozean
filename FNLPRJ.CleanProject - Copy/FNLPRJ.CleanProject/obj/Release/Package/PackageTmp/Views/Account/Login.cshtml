@using FNLPRJ.CleanProject.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<h2 style="text-align:center;">@ViewBag.Title.</h2>

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4 style="text-align:center;">You must be an admin to access this section.</h4>
    <h4 style="text-align:center;">Please enter your credentials below. </h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group" style="margin:auto;">
        <div style="margin:auto;">
            <p style="text-align:center;">Email</p>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", style = "margin:auto;" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="form-group" style="margin:auto;">
        <div style="margin:auto;">
            <p style="text-align:center;">Password</p>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", style = "margin:auto;" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group" style="text-align:center;">
        <div style="margin:auto;">
            <div class="checkbox">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>
        </div>
    </div>
    <div class="form-group" style="text-align:center;">
        <div style="margin:auto;">
            <input type="submit" value="Log in" class="btn btn-default" style="margin:auto;" />
        </div>
    </div>

   
    @* Enable this once you have account confirmation enabled for password reset functionality
        <p>
            @Html.ActionLink("Forgot your password?", "ForgotPassword")
        </p>*@
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}