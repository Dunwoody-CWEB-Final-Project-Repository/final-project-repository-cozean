@model FNLPRJ.CleanProject.Models.Episode

<link href="~/Content/Validation.css" rel="stylesheet" />


@using (Html.BeginForm("Create", "Home", FormMethod.Post))
{
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group" style="text-align: center;">
        <h4 style="text-align:center;"><strong>Episode Number:</strong></h4>
        <div>
            @Html.EditorFor(model => model.episodeNumber, new { htmlAttributes = new { @class = "form-control", style = "margin:auto;", placeholder = "Enter digits." } })
            @Html.ValidationMessageFor(model => model.episodeNumber, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="text-align: center;">
        <h4 style="text-align:center;"><strong>Sound File:</strong></h4>
        <div>
            @Html.EditorFor(model => model.soundFileLocation, new { htmlAttributes = new { @class = "form-control", style = "margin:auto;", placeholder = "xxxxxxxx3.mp3" } })
            @Html.ValidationMessageFor(model => model.soundFileLocation, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="text-align: center;">
        <h4 style="text-align:center;"><strong>Description</strong></h4>
        <div>
            @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control", style = "margin:auto;", placeholder = "Limit of 250 characters." } })
            @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="text-align: center;">
        <h4 style="text-align:center;"><strong>Picture File:</strong></h4>
        <div>
            @Html.EditorFor(model => model.picFileLocation, new { htmlAttributes = new { @class = "form-control", style = "margin:auto;", placeholder = "xxxxxxxxx.jpg" } })
            @Html.ValidationMessageFor(model => model.picFileLocation, "", new { @class = "text-danger" })
        </div>
    </div>

    <br />

    <div class="form-group">
        <div style="text-align:center;">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    <p style="text-align:center;">@Html.ActionLink("Back to Admin", "AdminSection")</p>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
