<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body style="background-color: darkgray;">
    <div class="navbar navbar-inverse navbar-fixed-top" style="align-items:center;">
        <div class="container">
            <div style="margin:auto;">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><img src="~/Content/img/FNLPRJ.twitterPicture.png" height="35" width="35" style="margin: 8px 20px 0px 0px;" /></li>
                    <li>@Html.ActionLink("Home","Index", "Home")</li>
                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content" style="background-color:darkgray; margin:0px 0px 0px 0px; padding:0px 0px 0px 0px; width:auto;">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <footer>
        <div style="height:50px; background-color:#313131; display:flex;" >
            <div style="margin:auto;">
                <img style="align-content:center;" src="~/Content/img/FNLPRJ.twitterPicture.png" height="35" width="35" />
            </div>
        </div>
    </footer>

</body>
</html>
